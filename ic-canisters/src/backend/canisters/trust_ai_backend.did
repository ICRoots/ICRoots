type InitArgs = record {
  trust_cap : opt nat64;
  min_trust : opt nat64;
  min_collateral : opt nat;
};
type Recommendation = record {
  reasons : vec text;
  decision : text;
  score : nat64;
};
service : (opt InitArgs) -> {
  // Deterministic recommendation using inputs + config.
  // - `collateral`: u128 amount in smallest units
  // - `trust`: u64 score (we clamp to `trust_cap`)
  recommend : (principal, nat, nat64) -> (Recommendation) query;
}
